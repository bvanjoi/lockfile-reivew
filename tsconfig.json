{
  "compilerOptions": {
    "isolatedModules": true,
    "composite": true,
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "allowJs": true,
    "declaration": true
  },
}